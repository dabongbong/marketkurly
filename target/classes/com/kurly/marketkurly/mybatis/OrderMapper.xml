<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Order_summary">

	<!-- 주문 내역 요청 -->
	<select id="selectAll" resultType="Order_summary">
		select * from order_summary order by order_date desc
	</select>
	
	<!-- 주문 상세 요청 -->
	<select id="select" parameterType="int" resultType="Order_summary">
		select * from order_summary where order_summary_id=#{order_summary_id}
	</select>
	
	<!-- 주문 하기 -->
	<insert id="insert" parameterType="Order_summary">
		insert into order_summary(order_summary_id, member_id, paymethod_int, orderdate, price)
		values(#{order_summary_id},#{member.member_id},#{paymethod_int},#{orderdate},#{price})
	</insert>
	
	<!-- 삭제 요청 (3년 지난 것들) 질문 사항 -->
	<delete id="delete" parameterType="int">
		delete from order_summary where order_date
	</delete>
	
	
</mapper>